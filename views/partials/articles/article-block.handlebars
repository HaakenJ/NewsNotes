<div class="">
    <div class="card article">
        <div class="card-image">
            {{#if this.img}}<img src="{{this.img}}">{{else}}<div></div>{{/if}}
            <a class="btn-floating halfway-fab waves-effect waves-light red" href="{{this.url}}">
                <i class="material-icons">info_outline</i>
            </a>
            <a class="add-note btn-floating halfway-fab waves-effect waves-light red modal-trigger"
                data-id="{{this._id}}" href="#modal1">
                <i class="material-icons">comment</i>
            </a>
        </div>
        <div class="card-content">
            <p><strong>{{this.title}}</strong></p>
            <p>{{this.summary}}</p>
        </div>
    </div>
</div>